<% if youtube_playlist.active? %>
  <%= link_to refinery_icon_tag('accept.png'), refinery.deactivate_youtube_playlists_admin_youtube_playlist_path(youtube_playlist), :title => t('.active'), :class => "activation_youtube_playlist", :data => {:id => youtube_playlist.id} %>
<% else %>
  <%= link_to refinery_icon_tag('cancel.png'), refinery.activate_youtube_playlists_admin_youtube_playlist_path(youtube_playlist), :title => t('.inactive'), :class => "activation_youtube_playlist", :data => {:id => youtube_playlist.id} %>
<% end %>
